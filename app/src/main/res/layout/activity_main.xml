<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PaisesLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/paises"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:background="@color/colorAzul"
        android:text="@string/paises"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textos_textsize" />

    <TextView
        android:id="@+id/lugar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/lugar"
        android:textSize="@dimen/textos_textsize"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageBandeira"
        android:layout_width="@dimen/image_imageSize"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:contentDescription="@string/lugar"
        app:srcCompat="@drawable/paisit" />

    <ImageView
        android:id="@+id/imageComida"
        android:layout_width="@dimen/image_imageSize"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:contentDescription="@string/comida"
        app:srcCompat="@drawable/comidait" />

    <TextView
        android:id="@+id/comida"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/comida"
        android:textSize="@dimen/textos_textsize" />


</LinearLayout>